{
  "tasks": {
    "build": "deno run --allow-read --allow-env ./src/scripts/build.ts",
    "test": "deno test --allow-read --allow-env --parallel",
    "coverage": "deno test --allow-read --allow-env --parallel --coverage && deno coverage --exclude=fixtures --exclude=test --html && open coverage/html/index.html",
    "clean": "deno run --allow-read --allow-write --allow-env ./src/scripts/clean.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "chalk": "npm:chalk@^5.4.1",
    "gradient-string": "npm:gradient-string@^3.0.0"
  }
}
